<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/fontawesome/css/all.min.css">
</head>
<body>
    <nav class="header">
        <h1 id="heading">Todo list</h1>
    </nav>

    <div class="box">
        <form action="/" method="post" onsubmit="return validateForm()">
            <input type="text" name="ele1" id="taskInput" placeholder="Enter the Task">
            <button type="submit">+</button>
        </form>
    </div>

    <!-- <div class="box-main">
       <% for(var i=0; i< ejes.length; i++){ %>
        <div class="item">
            <input type="checkbox">    
            <p><%= ejes[i] %></p>
        </div>
       <% } %>
    </div> -->
  <div class="box-main">
  <% ejes.forEach(function(items, index){ %>
    <div class="item">
      <input type="checkbox">

      <!-- Task Text -->
      <p id="task-text-<%= index %>" class="task-text"><%= items.name %></p>

      <!-- Action Buttons (Edit + Delete) -->
      <div id="action-buttons-<%= index %>" style="display:inline;">
        <!-- Edit Button -->
        <button type="button" class="edit-btn" onclick="showEditForm(<%= index %>)"><i class="fa-solid fa-pen-nib"></i></button>

        <!-- Delete Button -->
        <form action="/delete" method="post" class="delete-form" style="display:inline;" onsubmit="return confirmDelete()">
          <button type="submit" name="delete" class="delete-btn" value="<%= items._id %>"><i class="fa-solid fa-trash"></i></button>
        </form>
      </div>

      <!-- Hidden Edit Form -->
      <form id="edit-form-<%= index %>" action="/edit/<%= items._id %>" method="post" class="edit-form" style="display:none; margin-top:5px;"  onsubmit="return confirmEdit()">
        <input type="text" id="edit-input-<%= index %>" name="updatedTask" value="<%= items.name %>" required>
        <button type="submit"><i class="fa-solid fa-check"></i></button>
        <button type="button" onclick="cancelEdit(<%= index %>)"><i class="fa-solid fa-xmark"></i></button>
      </form>
    </div>
  <% }) %>
</div>







    <!-- footer -->
    <footer>
        <p>Smash &copy; toDo_List<sup>&reg;</sup></p>
    </footer>

    <!-- Client-side validation -->
      <!-- load external JS -->
    <script src="/js/validation.js"></script>
      
</body>
</html>
