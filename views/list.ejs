<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav class="header">
        <h1 id="heading">Todo list</h1>
    </nav>

    <div class="box">
        <form action="/" method="post" onsubmit="return validateForm()">
            <input type="text" name="ele1" id="taskInput" placeholder="Enter the Task">
            <button type="submit">+</button>
        </form>
    </div>

    <!-- <div class="box-main">
       <% for(var i=0; i< ejes.length; i++){ %>
        <div class="item">
            <input type="checkbox">    
            <p><%= ejes[i] %></p>
        </div>
       <% } %>
    </div> -->
    <div class="box-main">
  <% for (var i = 0; i < ejes.length; i++) { %>
    <div class="item" id="item-<%= i %>">
      <input type="checkbox">

      <!-- Normal Task Text -->
      <p class="task-text"><%= ejes[i] %></p>

      <!-- Edit Button -->
      <button type="button" class="edit-btn" onclick="showEditForm(<%= i %>)">Edit</button>

      <!-- Delete Button -->
      <form action="/delete/<%= i %>" method="post" class="delete-form" style="display:inline;">
        <button type="submit" class="delete-btn">Delete</button>
      </form>

      <!-- Hidden Edit Form -->
      <form action="/edit/<%= i %>" method="post" class="edit-form" style="display:none;">
        <input type="text" name="updatedTask" value="<%= ejes[i] %>">
        <button type="submit">Save</button>
        <button type="button" onclick="cancelEdit(<%= i %>)">Cancel</button>
      </form>
    </div>
  <% } %>
</div>




    <!-- footer -->
    <footer>
        <p>Smash &copy; toDo_List<sup>&reg;</sup></p>
    </footer>

    <!-- Client-side validation -->
      <!-- load external JS -->
    <script src="/js/validation.js"></script>
      
</body>
</html>
